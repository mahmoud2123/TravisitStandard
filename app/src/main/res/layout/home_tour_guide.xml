<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".vvm.destination.homeFragment"
    android:background="@color/colorWhite"
    android:padding="15dp">

<TextView
    android:id="@+id/fragment_home_tv_title"
    android:layout_width="93dp"
    android:layout_height="29dp"
    android:layout_marginStart="28dp"
    android:fontFamily="@font/segoeui_font"
    android:text="@string/home_title"
    android:textColor="@color/colorHeaderBlack"
    android:textSize="25sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    tools:ignore="MissingConstraints"
    tools:layout_editor_absoluteY="16dp" />

<include
    android:id="@+id/f_home_layout_active_search_bar"
    layout="@layout/search_bar"
    android:layout_width="350dp"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    app:layout_MarginStart="10dp"
    app:layout_constraintTop_toTopOf="@id/fragment_home_tv_title"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"

   />
    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/profile_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintTop_toBottomOf="@id/f_home_layout_active_search_bar"
        tools:listitem="@layout/profile_card"


        />







</androidx.constraintlayout.widget.ConstraintLayout>